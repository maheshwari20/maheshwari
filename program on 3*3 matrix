#include<stdio.h>

 void main()

{

   int arr[3][3];

   int i,j,sum=0;

   

   printf("Enter the elements of the matrix\n");

   for(i=0;i<row;i++)

   {

       for(j=0;j<col;j++)

       {

           scanf("%d",&mat[i][j]);

       }

   }

     printf("The matrix\n");

   for(i=0;i<row;i++)

   {

       for(j=0;j<col;j++)

       {

           printf("%d\t",mat[i][j]);

       }

       printf("\n");

   }

   //To add diagonal elements

   for(i=0;i<row;i++)

   {

       for(j=0;j<col;j++)

       {

           if(i==j)

           {

               sum=sum+mat[i][j];

           }

       }

   }

     printf("The sum of diagonal elements of a square matrix = %d\n",sum);

}

